<div class="modal fade" data-bs-backdrop="static" id="login_modal" tabindex="-1">
    <div class="modal-dialog justify-content-center modal-dialog-centered modal-sm">
        <form method="post" action="@Url.ActionLink("LogIn","Home")">
            <div class="modal-content">
                <div class="modal-header flex-column justify-content-center">
                    <img src="~/src/img/logo.svg" height="100" />
                    <h5 class="modal-title mt-3">Авторизация</h5>
                </div>
                <div class="modal-body">
                    <div class="labelholder">
                        <input class="form-control mb-2" type="text" name="email" placeholder="Email" />
                    </div>
                    <div class="labelholder">
                        <input class="form-control" type="password" name="password" placeholder="Password" />
                    </div>
                    <input type="hidden" name="returnUrl" value="https://@this.Context.Request.Host@this.Context.Request.Path" />
                </div>
                <div class="d-grid" style="grid-template-columns: 45% 45%;justify-content: space-around;margin: 0 1rem 0.5rem 1rem;">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Закрыть</button>
                    <button type="submit" role="button" class="btn btn-primary">Войти</button>
                </div>
            </div>
        </form>
    </div>
</div>

<script>
    formToAjax(document.querySelector("#login_modal form"), (response) => {


        if (response.Success) {
            showMessage(response.Message, "green");
            setTimeout(() => { if (response.Url != null) location.href = response.Url; else location.reload(); }, 1500);
        }
        else {
            showMessage(response.Message, "yellow");
        }
    });
</script>